    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">

</head>
<body>
<div class="container">
    <% if(message){ %>
        <h1 class="reg">     <%= message %></h1>
    <% } %>

            <form method="POST" action="/users/login"  class="login">
                <div class="form-group">
                    <label for="logEmail">Email address</label>
                    <p><input name="email" type="email" class="form-control" id="logEmail" placeholder="Enter email"></p>
                </div>
                <div class="form-group">
                    <label for="logPassword">Password</label>
                    <p><input name="password" type="password" class="form-control" id="logPassword" placeholder="Password"></p>
                </div>
                <button type="submit" class="btn">Login </button><p>Don't have an account? Register here <a href="/users/register/">  Register</a></p>
            </form>
        </div>


